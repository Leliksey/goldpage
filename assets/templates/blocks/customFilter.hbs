                            <li class="customFilter__serverItem">Twisting Nether</li>
                            <li class="customFilter__serverItem">Twisting Nether</li>
                            <li class="customFilter__serverItem">Twisting Nether</li>
                            <li class="customFilter__serverItem">Twisting Nether</li>
                        </ul>
                    </div>
                </div>
                <button type="button" class="customFilter__apply">
                    <img src="images/x.png" alt="x">
                    Reset filters
                </button>
            </div>
            <div class="customFilter__result">
                <div class="customFilter__result-item">
                    <div class="customFilter__result-item_left">
                        <ul class="customFilter__result-item_top">
                                <li class="customFilter__result-item_title customFilter__result-item_title-active">Draenor</li>
                                <li class="customFilter__result-item_title">Europe</li>
                                <li class="customFilter__result-item_title">Horde</li>
                        </ul>
                        <div class="customFilter__result-item_bottom">
                            <img src="images/clock.png" alt="clock">
                            15 min delivery time
                        </div>
                        <div class="customFilter__result-item_count customFilter__result-item_count-mob">34 929 000 gold in stock</div>
                    </div>
                    <div class="customFilter__result-item_right">
                        <div class="customFilter__result-item_count">34 929 000 gold in stock</div>
                        <div class="customFilter__result-item_price">
                            <div class="customFilter__result-price">$23,04</div>
                            <div class="customFilter__result-price_text">For 10K gold</div>
                        </div>
                        <button class="customFilter__result-button" type="button">Buy now</button>
                    </div>
                </div>
                <button class="customFilter__result-more">Load more</button>
            </div>
        </div>
    </div>
</div>





<style>
  /* для элемента input c type="radio" */
  .custom-radio {
    position: absolute;
    z-index: -1;
    opacity: 0;
  }
